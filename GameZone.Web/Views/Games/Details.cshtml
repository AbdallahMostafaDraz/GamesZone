@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-success rounded-4 mt-5 overflow-hidden" style="height: 500px">
    <div class="card-body p-0" style="height: 100%">
        <div class="row" style="height: 100%">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between" style="height: 100%">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                    @foreach(var device in Model.Devices)
                    {
                        <i class="@device.Device.Icon me-2 fs-1 text-secondary"></i>
                    }
                </div>

            </div>
            <div class="col-md-4" style="height: 100%">
                <img src="@($"{ConstantsFile.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100" style="height: 100%" />
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-4 fs-5">
    <a class="btn btn-primary" asp-action="Index">
        <i class="fas fa-arrow-right fa-flip-horizontal"></i> 
        Back To List
    </a>
</div>


